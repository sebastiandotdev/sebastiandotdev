    "mdx-bundler": "^10.1.1",
    "next": "16.1.0",
    "next-contentlayer2": "^0.5.8",
    "next-themes": "0.4.6",
    "nodemailer": "^7.0.11",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "rehype-pretty-code": "^0.14.1",
    "remark-gfm": "^4.0.1",
    "sonner": "^2.0.7"
  },
  "devDependencies": {
    "@pandacss/dev": "^1.7.1",
    "@types/mdx": "^2.0.13",
    "@types/node": "^25.0.3",
    "@types/nodemailer": "^7.0.4",
