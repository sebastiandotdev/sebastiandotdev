    "eslint": "^9.39.2",
    "eslint-config-next": "16.1.0",
    "prettier": "^3.7.4",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=v20.17.0"
  },
  "prettier": {
